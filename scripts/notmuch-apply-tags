/usr/local/bin/notmuch tag +spam -- from:@marketplace.amazon.com
/usr/local/bin/notmuch tag +spam -- from:recommendations@ifttt.com

/usr/local/bin/notmuch tag -inbox -unread -- tag:deleted or tag:spam

