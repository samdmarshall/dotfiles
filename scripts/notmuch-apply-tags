# Tags about employment
/usr/local/bin/notmuch tag +Employment -- tag:Employment.iRobot

# Things that don't go under "Inbox"
/usr/local/bin/notmuch tag +Archive -- tag:inbox and not date:-1month..today
/usr/local/bin/notmuch tag -inbox -- tag:Alerts
/usr/local/bin/notmuch tag -inbox -- tag:Billing
/usr/local/bin/notmuch tag -inbox -- tag:Developer
/usr/local/bin/notmuch tag -inbox -- tag:MailingList
/usr/local/bin/notmuch tag -inbox -- tag:Archive
/usr/local/bin/notmuch tag -inbox -- tag:Employment

# garbage
/usr/local/bin/notmuch tag +spam -- subject:SPAM
/usr/local/bin/notmuch tag +spam -- from:happybirthday@movies.fandango.com
/usr/local/bin/notmuch tag +spam -- from:customer-reviews-messages@amazon.com
