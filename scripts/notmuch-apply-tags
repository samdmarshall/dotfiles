#!/usr/bin/env bash

export NOTMUCH_CONFIG="/Users/Samantha/.config/notmuch/notmuch-config"

# Tags that get filed under "Alerts" 
/usr/local/bin/notmuch tag +Alerts +Alerts.Amazon -- from:ship-confirm@amazon.com or from:auto-confirm@apple.com
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.Amazon

/usr/local/bin/notmuch tag +Alerts +Alerts.CircleCI -- from:builds@circleci.com
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.CircleCI

/usr/local/bin/notmuch tag +Alerts +Alerts.Kickstarter -- from:no-reply@kickstarter.com
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.Kickstarter

/usr/local/bin/notmuch tag +Alerts +Alerts.Meetup -- from:info@meetup.com
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.Meetup

/usr/local/bin/notmuch tag +Alerts +Alerts.Linode -- subject:"Linode Alert" or subject:"Linode Events Notification"
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.Linode

/usr/local/bin/notmuch tag +Alerts +Alerts.Synology -- from:notification@synology.com or from:no-reply@mail.synologynotification.com or from:synologynotification.com
/usr/local/bin/notmuch tag -inbox -- tag:Alerts.Synology


# Tags that fet filed under "Billing"
/usr/local/bin/notmuch tag +Billing +Billing.Amazon -- from:order-update@amazon.com or from:noreply@amazon.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Amazon

/usr/local/bin/notmuch tag +Billing +Billing.Apple -- from:orders.apple.com or from:donotreply@apple.com or from:concierge@insideapple.com or from:AMR_Payment_Processing_US@apple.com or from:order_change@store.apple.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Apple

/usr/local/bin/notmuch tag +Billing +Billing.ATT -- from:"AT&T Customer Care for Wireless"
/usr/local/bin/notmuch tag -inbox -- tag:Billing.ATT

/usr/local/bin/notmuch tag +Billing +Billing.BoA -- from:onlinebanking@ealerts.bankofamerica.com or from:merrilledge@ml.com or from:bankofamerica.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.BoA

/usr/local/bin/notmuch tag +Billing +Billing.Github -- from:support@github.com or subject:"[GitHub] Payment Receipt" or subject:"[Github] Payment Receipt for samdmarshall"
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Github

/usr/local/bin/notmuch tag +Billing +Billing.Grubhub -- from:order@grubhub.com or from:orders@eat.grubhub.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Grubhub

/usr/local/bin/notmuch tag +Billing +Billing.iTunesReceipts -- from:do_not_reply@itunes.com or from:"iTunes Store" or from:no_reply@email.apple.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.iTunesReceipts

/usr/local/bin/notmuch tag +Billing +Billing.JetBlue -- from:notifications@jetblue.com or from:jetblueairways@email.jetblue.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.JetBlue

/usr/local/bin/notmuch tag +Billing +Billing.Linode -- from:billing@linode.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Linode

/usr/local/bin/notmuch tag +Billing +Billing.NameDotCom -- from:support@name.com or from:noreply@name.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.NameDotCom

/usr/local/bin/notmuch tag +Billing +Billing.Simple -- from:notify@e.simple.com or from:support@simple.com or from:notify@simple.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.Simple

/usr/local/bin/notmuch tag +Billing +Billing.PlayStation -- from:Sony@email.sonyentertainmentnetwork.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.PlayStation

/usr/local/bin/notmuch tag +Billing +Billing.PayPal -- from:service@paypal.com
/usr/local/bin/notmuch tag -inbox -- tag:Billing.PayPal

# Tags that file under "Developer"
/usr/local/bin/notmuch tag +Developer +Developer.Apple -- from:noreply-appledev@apple.com or from:developer@insideapple.com
/usr/local/bin/notmuch tag -inbox -- tag:Developer.Apple

/usr/local/bin/notmuch tag +Developer +Developer.Github -- from:notifications@github.com or from:noreply@github.com or to:@noreply.github.com or cc:mentions@noreply.github.com
/usr/local/bin/notmuch tag -inbox -- tag:Developer.Github

/usr/local/bin/notmuch tag +Developer +Developer.Radar -- from:devbugs@apple.com
/usr/local/bin/notmuch tag -inbox -- tag:Developer.Radar

/usr/local/bin/notmuch tag +Developer +Developer.Seed -- from:seedsu@apple.com or from:seedx@apple.com or subject:"AppleSeed" or subject:"Seed Notice"
/usr/local/bin/notmuch tag -inbox -- tag:Developer.Seed

/usr/local/bin/notmuch tag -inbox +MailingList -- from:security-announce-request@lists.apple.com or from:macbeta@list.valvesoftware.com or from:product-security-noreply@lists.apple.com or from:darwin-dev@lists.apple.com or to:Women-Who-Code-Boston-list@meetup.com or to:darwin-dev@lists.apple.com or to:cocoaheadsboston@googlegroups.com or to:bug-texinfo@gnu.org or to:Women-Who-Code-Boston

/usr/local/bin/notmuch tag +spam -- subject:SPAM

/usr/local/bin/notmuch tag -inbox -- tag:deleted or tag:spam

