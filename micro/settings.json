{
    "autoclose": false,
    "autoindent": true,
    "autosave": false,
    "colorcolumn": 0,
    "colorscheme": "solarized-light",
    "cursorline": true,
    "eofnewline": true,
    "ignorecase": true,
    "indentchar": " ",
    "infobar": true,
    "linter": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [
        "https://raw.githubusercontent.com/samdmarshall/micro-solarized-light-colortheme/master/repo.json"
    ],
    "ruler": true,
    "savecursor": false,
    "saveundo": false,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "softwrap": true,
    "statusline": true,
    "syntax": true,
    "tabsize": 4,
    "tabstospaces": true,
        "*.rb": {
            "tabsize": 2,
            "tabstospaces": true
        },
        "{R,r}akefile": {
            "tabsize": 2,
            "commenttype": "# %s",
            "tabstospaces": true
        },
        "Brewfile": {
            "tabsize": 2,
            "commenttype": "# %s",
            "tabstospaces": true
        },
        "*.yml": {
            "tabsize": 2
        },
        "*.py": {
            "tabstospaces": true
        },
        "*.fish": {
	        "commenttype": "# %s"
	    },
        "{M,m}akefile": {
            "commenttype": "# %s"
        },
        "*.mk": {
            "commenttype": "# %s"
        },
        "*.nim": {
            "tabsize": 2,
            "commenttype": "# %s"
        }
}
