{
    "autoclose": true,
    "autoindent": true,
    "autosave": true,
    "colorcolumn": 0,
    "colorscheme": "bubblegum",
    "cursorline": true,
    "eofnewline": true,
    "fishfmt": true,
    "ignorecase": true,
    "indentchar": " ",
    "infobar": true,
    "linter": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "ruler": true,
    "savecursor": false,
    "saveundo": true,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "softwrap": true,
    "statusline": true,
    "syntax": true,
    "tabsize": 4,
        "*.rb": {
            "tabsize": 2
        },
        "{R,r}akefile": {
            "tabsize": 2
        },
    "tabstospaces": true,
        "*.py": {
            "tabstospaces": true
        },
        "*.rb": {
            "tabstospaces": true
        },
        "{R,r}akefile": {
            "tabstospaces": true
        },

	"*.fish": {
		"commenttype": "# %s"
	},
	"{R,r}akefile": {
		"commenttype": "# %s"
	},
    "{M,m}akefile": {
        "commenttype": "# %s"
    },
    "*.mk": {
        "commenttype": "# %s"
    }
}
